pragma solidity 0.7.6;

interface IICHIVaultFactory {

    event FeeRecipient(
        address indexed sender, 
        address feeRecipient);

    event AmmFee(
        address indexed sender, 
        uint256 ammFee);

    event BaseFee(
        address indexed sender, 
        uint256 baseFee);

