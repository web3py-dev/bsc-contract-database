    // Functions
    function claim(
        Currency currency,
        uint256 zroAmount,
        bytes32[] calldata proof,
        address to,
        bytes calldata extraBytes
    ) external payable returns (MessagingReceipt memory receipt);

    function claim(
        address user,
        Currency currency,
        uint256 zroAmount,
        bytes32[] calldata proof,
        address to,
